<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.additional">
            <block class="Unet\SocialShare\Block\OpenGraph"
                   name="opengraph.general"
                   template="Unet_SocialShare::opengraph.phtml"
                   before="social.share.components" />
        </referenceBlock>
        <referenceContainer name="root">
            <block class="Unet\SocialShare\Block\ShareTo"
                   ifconfig="social_share/general/global_mode"
                   name="content.shareto"
                   template="Unet_SocialShare::shareto.phtml"
                   after="-" />
        </referenceContainer>
    </body>
</page>
